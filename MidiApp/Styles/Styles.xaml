<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--play puase button style-->
    <Style x:Key="ToggleStyle" TargetType="{x:Type ToggleButton}">
        <Style.Triggers>
            <DataTrigger Binding="{Binding IsChecked, ElementName=PlayButton}" 
                                         Value="False">
                <Setter Property="Content" Value="Play" />
            </DataTrigger>
            <DataTrigger Binding="{Binding IsChecked, ElementName=PlayButton}" 
                                         Value="True">
                <Setter Property="Content" Value="Pause" />
            </DataTrigger>
        </Style.Triggers>
    </Style>

    
    <!--Playback slider style-->
    <Style x:Key="PlaybackSlider" TargetType="{x:Type Slider}">
        <Setter Property="Background" Value="{DynamicResource LightBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource LightBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource LightBrush}"/>
        <Setter Property="OpacityMask" Value="{DynamicResource LightBrush}"/>
        <Setter Property="SelectionStart" Value="{Binding Minimum, RelativeSource={RelativeSource Self}}"/>
        <Setter Property="SelectionEnd" Value="{Binding Value, RelativeSource={RelativeSource Self}}"/>
        <Setter Property="IsSelectionRangeEnabled" Value="True"/>
        <Setter Property="IsMoveToPointEnabled" Value="True"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Slider}">
                    <Grid>
                        <Border Height="4.0"
                                Margin="5,0"
                                CornerRadius="2"
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <Canvas Margin="-7,0">
                                <Border x:Name="PART_SelectionRange"
                                        CornerRadius="2,0,0,2"
                                        Background="{TemplateBinding Foreground}"
                                        BorderBrush="{TemplateBinding Foreground}"
                                        Height="4.0"/>
                            </Canvas>
                        </Border>
                        <Track x:Name="PART_Track">
                            <Track.DecreaseRepeatButton>
                                <RepeatButton Style="{StaticResource SimpleScrollRepeatButtonStyle}" Command="{x:Static Slider.DecreaseLarge}"/>
                            </Track.DecreaseRepeatButton>
                            <Track.IncreaseRepeatButton>
                                <RepeatButton Style="{StaticResource SimpleScrollRepeatButtonStyle}" Command="{x:Static Slider.IncreaseLarge}"/>
                            </Track.IncreaseRepeatButton>
                            <Track.Thumb>
                                <Thumb x:Name="Thumb" Style="{StaticResource SimpleSliderThumb}"/>
                            </Track.Thumb>
                        </Track>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>